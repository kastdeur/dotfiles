# Include separate configs from ~/.ssh/config.d/
Include ~/.ssh/config.d/*

# Defaults
Host *
	ForwardAgent no
	ForwardX11 no
	IdentitiesOnly yes
	IdentityFile ~/.ssh/keys/%h
	UserKnownHostsFile ~/.ssh/known_hosts ~/.ssh/known_hosts.d/%h ~/.ssh/known_hosts2
	UpdateHostKeys ask
	HashKnownHosts no
	AddKeysToAgent yes
